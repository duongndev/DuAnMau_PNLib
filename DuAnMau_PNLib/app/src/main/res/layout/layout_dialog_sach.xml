<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_title_layout_them_sach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Them Sach"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        app:hintEnabled="false">

        <EditText
            android:id="@+id/edt_ten_sach_layout_them_sach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ten sach"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_loai_sach_layout_them_sach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loai sach"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spin_loai_sach_layout_them_sach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp" />
    </LinearLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        app:hintEnabled="false">

        <EditText
            android:id="@+id/edt_gia_sach_layout_them_sach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Gia sach"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        app:hintEnabled="false">
        <EditText
            android:id="@+id/edt_nam_xuat_ban_layout_them_sach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nam xuat ban"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>