<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:id="@+id/layout_item_thanh_vien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_toStartOf="@+id/linearLayout"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/txt_ma_thanh_vien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ma thanh vien"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_ten_thanh_vien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Ten thanh vien"
                android:textColor="@color/black"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txt_nam_sinh_thanh_vien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Nam sinh"
                android:textColor="@color/black"
                tools:ignore="MissingConstraints" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:layout_marginEnd="342dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_delete_sach"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:srcCompat="@android:drawable/ic_delete" />
        </LinearLayout>
    </RelativeLayout>


</androidx.cardview.widget.CardView>